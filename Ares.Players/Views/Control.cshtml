@inherits ServiceStack.Razor.ViewPage<Ares.Players.Web.ControlResponse>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">
            <div class="form-group">
                <label for="volume-range-overall">Overall volume</label>
                <input type="range" class="form-control-range" id="volume-range-overall" min="0" max="100" onChange="changeVolume(2, this.value)">
            </div>
         
            <div class="form-group">
                <label for="volume-range-music">Music volume</label>
                <input type="range" class="form-control-range" id="volume-range-music" min="0" max="100" onchange="changeVolume(1, this.value)">
            </div>
            
            <div class="form-group">
                <label for="volume-range-sounds">Sound volume</label>
                <input type="range" class="form-control-range" id="volume-range-sounds" min="0" max="100" onchange="changeVolume(0, this.value)">
            </div>
            
            <hr/>
            
            <p class="mb-0">
                <span class="d-flex justify-content-between align-items-center">
                    <strong>Music</strong>
                </span>

                <span class="text-truncate d-block"><span id="currentMusic"></span>&nbsp;</span>
            </p>

            <div class="btn-toolbar justify-content-center">                    
                <div class="btn-group mt-2 mr-2">
                    <button class="btn btn-secondary" onclick="switchToTags()" title="Tags">
                        <span class="fa-stack">
                            <i class="fas fa-tags fa-stack-1x"></i>
                        </span>
                    </button>
                </div>
                              
                <div class="btn-group mt-2 mr-2">
                    <button class="btn btn-secondary" onclick="switchToPlaylist()" title="Playlist">
                        <span class="fa-stack">
                            <i class="fas fa-list-ul fa-stack-1x"></i>
                        </span>
                    </button>
                </div>
                
                <div class="btn-group mt-2 mr-2">
                    <button class="btn btn-secondary" onclick="back()" title="Back">
                        <span class="fa-stack">
                            <i class="fas fa-step-backward"></i>
                        </span>
                    </button>

                    <button class="btn btn-secondary" onclick="forward()" title="Forward">
                        <span class="fa-stack">
                            <i class="fas fa-step-forward"></i>
                        </span>
                    </button>
                </div>
                              
                <div class="btn-group mt-2">
                    <button class="btn btn-secondary" onclick="repeatOn()" id="repeatButton" title="Repeat">
                        <span class="fa-stack">
                            <i class="fas fa-redo fa-stack-1x"></i>
                            <i class="fas fa-slash fa-stack-1x"></i>
                        </span>
                    </button>
                </div>
            </div>
            
            <hr/>
            
            <p>
                <span class="d-flex justify-content-between align-items-center">
                    <strong>Active elements</strong>
                    
                    <span class="badge badge-secondary" id="active-elements-count"></span>
                </span>

                <span class="elements" id="activeElements2"></span>
            </p>
        </div>

        <div class="col-lg-3">
            <h4>Modes</h4>

            <div id="modeSelection2" class="list-group">

            </div>
        </div>

        <div class="col-lg-6">
            <div class="tags d-none" id="tags">
                <h4>Tags</h4>
                
                <p class="p-1">
                    <button class="btn btn-primary" onclick="RemoveAllTags()" title="Stop all"><i class="fas fa-stop"></i> Remove all tags</button>
                </p>
                
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="combineSelect">Tag requirement</label>
                        <div class="col-auto">
                            <select class="form-control combineSelect" id="combineSelect" onchange="ChangeTagCombine()" data-role="none">
                                <option>OR: Music must have at least one tag in ANY category</option>
                                <option>Category-AND: Music must have at least one tag in ALL categories</option>
                                <option>AND: Music must have all tags in all categories</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="fadeTimeInput">Fading time</label>
                        <div class="col-auto">
                            <div class="input-group mb-2 mr-sm-2">
                                <input type="number" class="form-control" min="0" max="10000" step="100" id="fadeTimeInput" onchange="SetFading()" data-role="none"/>

                                <div class="input-group-append">
                                    <div class="input-group-text">ms</div>
                                </div>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="fadeOnChangeBox" onchange="SetFading()" name="fadeOnChange" value="fadeOnChange">
                                <label class="form-check-label" for="fadeOnChangeBox">
                                    Fade only on tag change
                                </label>
                            </div>
                        </div>
                    </div>
                </form>

                <hr />

                <div id="tagsContainer"></div>
            </div>

            <div class="elements" id="elements">
                <h4>Elements</h4>
                
                <p class="p-1">
                    <button class="btn btn-primary" onclick="stopActiveMode()" title="Stop all"><i class="fas fa-stop"></i> Stop all in this mode</button>
                    <button class="btn btn-primary" onclick="startActiveMode()" title="Stop all"><i class="fas fa-play"></i> Start all in this mode</button>
                </p>
                
                <div class="container-fluid p-1">
                    <div class="row m-n1" id="elements-container">

                    </div>
                </div>
            </div>

            <div class="inlinePlaylist d-none" id="inlinePlaylist">
                <h4>Current playlist</h4>

                <div id="playlistList">
                </div>
            </div>
        </div>
    </div>
</div>
